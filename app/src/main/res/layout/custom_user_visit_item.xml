<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/user_icon" />

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_user_icon"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/img_user_icon"
            android:text="Full Name: Tonny Kayage"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_time_entrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_username"
            android:layout_below="@+id/txt_username"
            android:layout_marginTop="4dp"
            android:text="Time of Entrance: 12 hours ago"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_date_entrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_time_entrance"
            android:layout_below="@+id/txt_time_entrance"
            android:layout_marginTop="4dp"
            android:text="Date: 12th of july"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_date_entrance"
            android:layout_below="@+id/txt_date_entrance"
            android:layout_marginTop="4dp"
            android:text="Status: Access Granted"
            android:textColor="#00ff00"
            android:textSize="12sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>